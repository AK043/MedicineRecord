@model IEnumerable<MedicineRecordProject.Models.MedicineModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("AddEdit", "Medicines")" class="btn btn-dark"><i class="glyphicon glyphicon-plus"></i> Create</a>
</p>
<table class="table table-striped">
    <thead class="table-bordered" style="background-color:#000000;">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.MedicineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            <a href="@Url.Action("AddEdit", "Medicines", new { id = item.ID })" class="btn btn-dark"><i class="glyphicon glyphicon-pencil"></i>Edit</a>
            <a onclick="Delete(@item.ID)" class="btn btn-primary"><i class="glyphicon glyphicon-remove"></i>Delete</a>

        </td>
    </tr>
    }

</table>

@section scripts{
    <script>
        $(function () {
            var SuccessMessage = '@TempData["SuccessMessage"]';
            if (SuccessMessage != '') {
                alertify.success(SuccessMessage);
            }
        });
        function Delete(id) {
            alertify.confirm('WebApi CRUD Operation', 'Are you sure you want to delete this record?', function () {
                window.location.href = '@Url.Action("Delete","Books")/'  +id
            }, null);
        }
    </script>
}

